@model int

<section class="container row pb-4 d-flex flex-column justify-content-between align-items-center">
    <article class="col-12 text-center d-flex flex-column justify-content-between align-items-center">
        <h1 class="text-primary text-center">Payment Successfully!</h1>
        Order Number : @Model
        <img src="~/images/lawn_leaf.jpg" width="65%" class="mt-3" />
    </article>
    <article class="col-12 text-center my-3 pb-4 d-flex flex-column justify-content-between align-items-center" style="color:maroon">
        Payment has been applied successfully!
        <a asp-area="Admin"
           asp-controller="Order"
           asp-action="Details"
           asp-route-orderId="@Model" class="btn btn-primary mt-2">Back to Order Details</a>
    </article>
</section> 