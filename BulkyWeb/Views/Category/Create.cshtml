@model Category

<form method="post">

    <section class="border p-3 mt-4">
        <article class="row pb-2">
            <h2 class="text-primary">Create category</h2>
            <hr />
        </article>
        @*<div asp-validation-summary="ModelOnly"></div>*@
        <article class="mb-3 row p-1">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </article>
        <article class="mb-3 row p-1">
            <label asp-for="DisplayOrder" class="p-0"></label>
            <input asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </article>

        <article class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a class="btn btn-secondary border form-control" asp-controller="Category" asp-action="Index">Back to list</a>
            </div>
        </article>
    </section>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}